<Page x:Class="PianoProject.Pages.Admins.AdminChooser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PianoProject.Pages.Admins"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminChooser">

    <Grid Background="#FF373737">
        <Button x:Name="ChooserBtn" HorizontalAlignment="Left" Margin="60,0,0,0" VerticalAlignment="Center" Height="110" Width="111" Click="ChooserBtn_Click">
            <Button.Background>
                <ImageBrush ImageSource="/Images/usericon.png"/>
            </Button.Background>

        </Button>
        <Label Content="Список пользователей" HorizontalAlignment="Left" Margin="190,0,0,0" VerticalAlignment="Center" Foreground="White" Width="236" Height="38" FontSize="20"/>
    </Grid>
</Page>
